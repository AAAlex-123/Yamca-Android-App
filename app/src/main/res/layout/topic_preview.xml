<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topicpreview_layout"
        android:background="#333333"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/topicpreview_topicname_text"
            android:layout_weight="3"
            tools:text="conversation1"
            android:textColor="#B7B7B7"
            android:textSize="22sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical" />

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/topicpreview_unread_layout"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topicpreview_unread_label_text"
                android:text="@string/topicpreview_unread"
                android:textColor="#FF5500"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingBottom="5dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topicpreview_unread_count_text"
                tools:text="1"
                android:textColor="@android:color/white"
                android:background="#FF5500"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingHorizontal="11sp"
                android:paddingVertical="3sp"
                android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
